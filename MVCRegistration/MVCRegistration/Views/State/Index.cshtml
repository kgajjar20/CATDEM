@model IEnumerable<MVCRegistration.Models.StateViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddState")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("State Id")
        </th>
        <th>
            @Html.DisplayName("State")
        </th>
        <th>
            @Html.DisplayName("Country")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StateId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.CountryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StateId }) |
            @Html.ActionLink("Details", "Details", new { id = item.StateId }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.StateId })
        </td>
    </tr>
}

</table>
